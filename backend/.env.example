# Puerto del servidor
PORT=3000

# Credenciales del administrador por defecto
ADMIN_EMAIL=admin@voidshop.com
ADMIN_PASSWORD=admin123

# Secret para JWT (CAMBIAR EN PRODUCCIÓN)
# Genera uno seguro con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=tu_jwt_secret_super_seguro_aqui_128_caracteres
JWT_EXPIRES_IN=2h

# Clave de encriptación para datos sensibles (CAMBIAR EN PRODUCCIÓN)
# Debe ser exactamente 32 caracteres para AES-256
ENCRYPTION_KEY=12345678901234567890123456789012

# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=tu_password_aqui
DB_NAME=voidshop

# Auto-migrations (true para ejecutar migraciones automáticamente al iniciar)
AUTO_MIGRATE=true

# Entorno (development, production)
NODE_ENV=development

# CORS - Origenes permitidos (separados por coma)
# En desarrollo: http://localhost:5173,http://localhost:5174
# En producción: https://tu-frontend.com,https://www.tu-frontend.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174
